      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>
    <script>
      $(document).ready(function () {
        $('#info').hide()
        $('#avs').addClass('seleccionado')
        $('#avs').click(function () {
          $('#mavs').removeClass('seleccionado')
          $('#hst').removeClass('seleccionado')
          $('#gu').removeClass('seleccionado')
          $('#avs').addClass('seleccionado')
        })
        $('#mavs').click(function () {
          $('#avs').removeClass('seleccionado')
          $('#hst').removeClass('seleccionado')
          $('#gu').removeClass('seleccionado')
          $('#mavs').addClass('seleccionado')
        })
        $('#hst').click(function () {
          $('#mavs').removeClass('seleccionado')
          $('#avs').removeClass('seleccionado')
          $('#gu').removeClass('seleccionado')
          $('#hst').addClass('seleccionado')
        })
        $('#gu').click(function () {
          $('#mavs').removeClass('seleccionado')
          $('#hst').removeClass('seleccionado')
          $('#avs').removeClass('seleccionado')
          $('#gu').addClass('seleccionado')
        })

        $('.ifo').click(function(){
          $('#nav').hide()
          $('#info').show()
        })

        $('#cerr').click(function(){
          $('#nav').show()
          $('#info').hide()
        })
      })
    </script>
