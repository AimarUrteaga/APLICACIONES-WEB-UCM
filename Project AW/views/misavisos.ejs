<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil usario</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/PerfilUsuario.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <div class="container-fluid">
      <!--Navbar-->
      <%- include("Navbar") %>
      <!--La parte de buscar-->
      <%- include("Barrabusqueda") %>
      <!--Boton nuevo aviso-->
      <div class="row">
        <div class="col-xl-2"></div>
        <div class="col-xl-8" style="margin-top: 1em;">
          <button class="btn btn-secondary" id="na">Nuevo aviso</button>
        </div>
      </div>
      <!--La barra de opciones-->
      <%- include("Barradeopciones") %>
      <!--Tabla-->
      <div class="row">
        <div class="col-xl-2"></div>
        <div class="col-xl-8">
          <table id="tb">
            <tr>
              <th>Fecha</th>
              <th>Texto</th>
              <th>Tipo</th>
              <th>Tecnico</th>
            </tr>
            <% avisos.forEach(function(aviso){ %>
            <tr>
              <td><%= aviso.Fecha %></td>
              <td>
                <% if (aviso.Observaciones.length<100){ %>
                  <%= aviso.Observaciones %>
                <% }else{ %>
                  <%= aviso.Observaciones.slice(0, 100)+"..." %>
                <% } %>
              </td>
              <td><img src="./img/categoria/<%= aviso.Nombre %>.png" alt="imagen categoria"></td>
              <% if (aviso.Usu_Correo_Tec){ %>
                <td><%= aviso.Usu_Correo_Tec %></td>
              <% } %>
            </tr>
            <% }) %>
          </table>
        </div>
      </div>
    </div>

    <!--lo que parece al pulsar el nombre o foto-->
    <%- include("Perfil") %>


    <!--lo que parece al pulsar nuevo aviso-->
    <section id="nvAviso" style="display: none;">
      <div id="nvAvisoContainer" style="margin-top: 0.75em; margin-bottom: 0.75em;">
        <div class="row text-center" >
          <h1 style="font-size: 1.25em;">Nuevo Aviso</h1>
        </div>
        
          <form method="post" action="/procesar_Aviso" id="frm">
            <div class="row arr">

              <label for=""><h3 class="fs" >Categoria</h3></label>
              <select class="text-center" id="categoria" name="" id="">
                <option value="vacio"></option>
                <option value="Sugerencia">Sugerencia</option>
                <option value="Incidencia">Incidencia</option>
                <option value="Felicitación">Felicitación</option>
              </select>
            </div>
            <div class="row arr">

              <label for=""><h3 class="fs" id="tipoh3" style="display: none;">Tipo</h3></label>
              <select class="text-center" id="tipo" name="" id="" style="display: none;">
                <option value="ad">Administración digital</option>
                <option value="Comunicaciones">Comunicaciones</option>
                <option value="Conectividad">Conectividad</option>
              </select>
            </div>
            <div class="row arr">

              <label for=""><h3 class="fs" id="contenidoh3" style="display: none;">Contenido</h3></label>
              <select class="text-center" id="contenido" name="" id="" style="display: none;">
                <option value="digital">Certificado digital de personal física</option>
                <option value="electronico">Certificado electrónico de empleado público</option>
                <option value="registro">Registro electrónico</option>
              </select>
            </div>

            <div class="row arr">

              <label for=""><h3 class="fs">Escribe el aviso</h3></label>
              <textarea name="" id="" required></textarea>
            </div>

            <div class="row arr">
            
              <div class="col-6  text-center" id="anul">
                <a href="#" class="btn btn-secondary" style="width: 5em;">Anular</a>
              </div>

              <div class="col-6 text-center">
                <button class="btn btn-secondary" style="width: 5em;">Enviar</button>
              </div>
              
            </div>

    
          </form>
        
      </div>
    </section>

    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>
    <script>
      $(document).ready(function () {

        $('#na').click(function(){
          $('#nav').hide()
          $('#nvAviso').show()
        })
        $('#anul').click(function(){
          $('#nav').show()
          $('#frm').trigger('reset')//para limpiar el formulario
          $('#nvAviso').hide()
        })

        $('.ifo').click(function(){
          $('#nav').hide()
          $('#info').show()
        })

        //que paraezcan los submenus de nuebo abiso
        $('#cerr').click(function(){
          $('#nav').show()
          $('#info').hide()
        })

        $("#categoria").change(function(){
          //$(this).find('option').get(0).remove();
          tmp = $(this).find('option').get(0);
          //console.log($( "#categoria option:selected" ).val())
          $(this).find('option').get(0)
          $('#tipo').show()
          $('#tipoh3').show()
        })

        $('#tipo').change(function(){
          $('#contenido').show()
          $('#contenidoh3').show()
        })

      })
    </script>
  </body>
</html>
