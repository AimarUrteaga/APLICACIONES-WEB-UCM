<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil usario</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/PerfilUsuario.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <div class="container-fluid">
      <!--Navbar-->
      <%- include("Navbar") %>
      <!--La parte de buscar-->
      <%- include("Barrabusqueda") %>
      <!--La barra de opciones-->
      <% if (session.NEmpleado){ %>
        <%- include("BarradeopcionesAdmin") %>
      <% }else{ %>
        <%- include("Barradeopciones") %>
      <% } %>
      <!--Tabla-->
      <div class="row">
        <div class="col-xl-2"></div>
        <div class="col-xl-8">
          <table id="tb">
            <tr>
              <th>Tipo</th>
              <th>Fecha</th>
              <th>Texto</th>
              <th>Acciones</th>
            </tr>
            <% avisos.forEach(function(aviso){ %>
            <tr>
              <td>rojo</td>
              <td><%= aviso.Fecha %></td>
              <td>
                <% if (aviso.Observaciones.length<100){ %>
                  <%= aviso.Observaciones %>
                <% }else{ %>
                  <%= aviso.Observaciones.slice(0, 100)+"..." %>
                <% } %>
              </td>
              <td>foto ojo</td>
            </tr>
            <% }) %>
          </table>
        </div>
      </div>
    </div>

    <!--lo que parece al pulsar el nombre o foto-->
    <section id="info">
      <div id="infoContainer">
        <div class="row">
          <div class="col-xl-4 text-center"><img src="./img/noUser.png" alt="imagen user" height="50px" width="50px" /></div>
          <div class="col-xl-8 text-center">
            <div class="row"><h4 ><b><%= session.Nombre %></b> </h4></div>
            <div class="row"><h5 class="fd"> <b>Fecha de creacion:</b> <%= session.Fecha %> </h5></div>
            <div class="row"><h5 class="fd"><b>Perfil:</b> <%= session.Rol %> </h5></div>
            <div class="row"><h5 class="fd"><b>Nombre para mostrar:</b> <%= session.Nombre %> </h5></div>
          </div>
        </div>
        <div class="row text-center" style="margin-top: 1em;">
          <h6 class="fs">Avisos relizados: 19</h6>
        </div>
        <div class="row text-center">
          <h6 class="fs">Incidencias: 15</h6>
        </div>
        <div class="row text-center">
          <h6 class="fs">Sugerencias: 3</h6>
        </div>
        <div class="row text-center">
          <h6 class="fs">Felicitaciones: 1</h6>
        </div>
        <div class="row" style="margin-top: 1em;">
          <div class="col-12 text-center">
              <button class="btn btn-secondary " style="width: 8em;" id="cerr">Cerrar</button>
          </div>
        </div>
      </div>
    </section>


    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>
    <script>
      $(document).ready(function () {
        $('#info').hide()
        $('#nvAviso').hide()

        $('#na').click(function(){
          $('#nav').hide()
          $('#nvAviso').show()
        })
        $('#anul').click(function(){
          $('#nav').show()
          $('#frm').trigger('reset')//para limpiar el formulario
          $('#nvAviso').hide()
        })

        $('.ifo').click(function(){
          $('#nav').hide()
          $('#info').show()
        })

        $('#cerr').click(function(){
          $('#nav').show()
          $('#info').hide()
        })

      })
    </script>
  </body>
</html>
